<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapstoneAppUITest.Views.PageView1"
             BackgroundColor="#747474"
             xmlns:helpers="clr-namespace:CapstoneAppUITest.Helpers">

    <AbsoluteLayout>

        <Label Text="HOME" FontSize="55" FontFamily="Bebas-Regular" AbsoluteLayout.LayoutBounds=".025, .019" AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Frame BackgroundColor="Black" BorderColor="Black" CornerRadius="20" AbsoluteLayout.LayoutBounds=".035, .128, 0.3, 0.26" AbsoluteLayout.LayoutFlags="All" Padding="0">

            <AbsoluteLayout>

                <Image WidthRequest="{x:Static helpers:UIScaler.imageSizeByDensity}" HeightRequest="{x:Static helpers:UIScaler.imageSizeByDensity}" Source="addmemberwhite.png" AbsoluteLayout.LayoutBounds=".5, .29" AbsoluteLayout.LayoutFlags="PositionProportional"/>

                <Label x:Name="niggaLabel" Text="ADD NEW MEMBER" FontSize="{x:Static helpers:UIScaler.fontSizeByDensity}" FontFamily="Bebas-Regular" TextColor="White" AbsoluteLayout.LayoutBounds=".5, .82" AbsoluteLayout.LayoutFlags="PositionProportional"/>

            </AbsoluteLayout>

            <Frame.GestureRecognizers>
                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped"/>
            </Frame.GestureRecognizers>

        </Frame>

        <Frame BackgroundColor="Black" BorderColor="Black" CornerRadius="20" AbsoluteLayout.LayoutBounds=".5025, .128, 0.3, 0.26" AbsoluteLayout.LayoutFlags="All" Padding="0">

            <AbsoluteLayout>

                <Image WidthRequest="{x:Static helpers:UIScaler.imageSizeByDensity}" HeightRequest="{x:Static helpers:UIScaler.imageSizeByDensity}" Source="searchwhite.png" AbsoluteLayout.LayoutBounds=".5, .29" AbsoluteLayout.LayoutFlags="PositionProportional"/>

                <Label Text="SEARCH MEMBER" FontSize="{x:Static helpers:UIScaler.fontSizeByDensity}" FontFamily="Bebas-Regular" TextColor="White" AbsoluteLayout.LayoutBounds=".5, .82" AbsoluteLayout.LayoutFlags="PositionProportional"/>

            </AbsoluteLayout>

            <Frame.GestureRecognizers>
                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped"/>
            </Frame.GestureRecognizers>

        </Frame>

        <Frame BackgroundColor="Black" BorderColor="Black" CornerRadius="20" AbsoluteLayout.LayoutBounds=".97, .128, 0.3, 0.26" AbsoluteLayout.LayoutFlags="All" Padding="0">

            <AbsoluteLayout>

                <Image WidthRequest="{x:Static helpers:UIScaler.imageSizeByDensity}" HeightRequest="{x:Static helpers:UIScaler.imageSizeByDensity}" Source="notificationwhite.png" AbsoluteLayout.LayoutBounds=".5, .29" AbsoluteLayout.LayoutFlags="PositionProportional"/>

                <Label Text="UNREAD NOTIFICATIONS" FontSize="{x:Static helpers:UIScaler.fontSizeByDensity}" FontFamily="Bebas-Regular" TextColor="White" AbsoluteLayout.LayoutBounds=".5, .82" AbsoluteLayout.LayoutFlags="PositionProportional"/>

            </AbsoluteLayout>

            <Frame.GestureRecognizers>
                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped"/>
            </Frame.GestureRecognizers>

        </Frame>

        <Frame Padding="3" BackgroundColor="Black" BorderColor="Black" CornerRadius="15" AbsoluteLayout.LayoutBounds="0.045, .83, 0.472, 0.55" AbsoluteLayout.LayoutFlags="All">

            <Frame BackgroundColor="White" CornerRadius="10">

                <Label Text="Hello, Thick Border!" HorizontalOptions="Center" VerticalOptions="Center"/>

            </Frame>

        </Frame>

        <Frame Padding="3" BackgroundColor="Black" BorderColor="Black" CornerRadius="15" AbsoluteLayout.LayoutBounds="0.96, .83, 0.472, 0.55" AbsoluteLayout.LayoutFlags="All">

            <Frame BackgroundColor="White" CornerRadius="10">

                <Label Text="Hello, Thick Border!" HorizontalOptions="Center" VerticalOptions="Center"/>

            </Frame>

        </Frame>

        <Frame BackgroundColor="Black" BorderColor="Black" CornerRadius="25" AbsoluteLayout.LayoutBounds="0.5, .97, .952, 0.03" AbsoluteLayout.LayoutFlags="All"/>
        
    </AbsoluteLayout>
    
</ContentPage> 