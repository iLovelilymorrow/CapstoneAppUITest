<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapstoneAppUITest.Views.PageView3"
             BackgroundColor="#747474">

    <VerticalStackLayout>
        
        <HorizontalStackLayout>

            <Frame BackgroundColor="Black" BorderColor="Black" WidthRequest="120" HeightRequest="35" HorizontalOptions="Start" Margin="30,30,0,20" Padding="0" CornerRadius="25">

                <Label Text="TODAY" TextColor="White" FontSize="22" FontFamily="Bebas-Regular" HorizontalOptions="Center" VerticalOptions="Center"/>

            </Frame>

            <Frame BackgroundColor="Black" BorderColor="Black" WidthRequest="160" HeightRequest="35" HorizontalOptions="Start" Margin="30,30,0,20" Padding="0" CornerRadius="25">

                <Label Text="MARK ALL AS READ" TextColor="White" FontSize="22" FontFamily="Bebas-Regular" HorizontalOptions="Center" VerticalOptions="Center"/>

            </Frame>

            <Frame BackgroundColor="Black" BorderColor="Black" WidthRequest="120" HeightRequest="35" HorizontalOptions="Start" Margin="15,30,0,20" Padding="0" CornerRadius="25">

                <Label Text="CLEAR ALL" TextColor="White" FontSize="22" FontFamily="Bebas-Regular" HorizontalOptions="Center" VerticalOptions="Center"/>

            </Frame>

            <Frame BackgroundColor="Black" BorderColor="Black" WidthRequest="120" HeightRequest="35" HorizontalOptions="Start" Margin="10,30,0,20" Padding="0" CornerRadius="25">

                <Label Text="FILTER" TextColor="White" FontSize="22" FontFamily="Bebas-Regular" HorizontalOptions="Center" VerticalOptions="Center"/>

            </Frame>

        </HorizontalStackLayout>

        <Frame BackgroundColor="Black" BorderColor="Black" Margin="30,618,30,0" CornerRadius="25" HeightRequest="25"/>

    </VerticalStackLayout>
    
</ContentPage>